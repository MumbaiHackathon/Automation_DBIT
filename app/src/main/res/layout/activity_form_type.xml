<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vinay.automation.FormType">

    <Button
        android:id="@+id/railwayButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143dp"
        android:onClick="railwayReservationClicked"
        android:text="Railway Reservation" />

    <Button
        android:id="@+id/ktButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/railwayButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:onClick="ktFormClicked"
        android:text="Reappearing Form" />
</RelativeLayout>
